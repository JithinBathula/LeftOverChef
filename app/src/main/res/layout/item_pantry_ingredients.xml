<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="31dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="3dp"
    app:cardElevation="3dp"
    android:id="@+id/linearLayoutIngredientItem"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/ingredientName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Ingredient Name"
            android:fontFamily="@font/caveatbrush"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingredientAmount"
            android:layout_width= "50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Amount"
            android:fontFamily="@font/caveatbrush"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/ingredientUnit"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:fontFamily="@font/caveatbrush"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:text="Units"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/myCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:id="@+id/ImageButton_DeleteIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_delete_outline_24"
            android:background="@drawable/selector_buttoneffect"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@color/lighter_black" />

</LinearLayout>