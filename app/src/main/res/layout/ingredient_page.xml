<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edit_ingredientPage_searchIngredient"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Input ingredients here"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_ingredientPage_generateRecipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="336dp"
        android:text="Generate Recipes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_ingredientPage_searchIngredient" />

    <!-- Add UI elements for filters, such as dropdown menus or checkboxes -->
    <!-- Example: Cooking Difficulty -->
    <Spinner
        android:id="@+id/spinner_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/difficulty_levels"
        android:prompt="@string/difficulty"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_ingredientPage_searchIngredient" />

    <Spinner
        android:id="@+id/spinner_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/duration"
        app:layout_constraintTop_toBottomOf="@id/spinner_difficulty"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:entries="@array/duration" />




</androidx.constraintlayout.widget.ConstraintLayout>